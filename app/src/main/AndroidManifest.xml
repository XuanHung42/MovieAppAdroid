<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="groups.project.movieappwithfirebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieAppWithFireBase">
        <activity
            android:name="groups.project.movieappwithfirebase.HomeActivity"
            android:exported="false" />
        <activity
            android:name="groups.project.movieappwithfirebase.DetailsActivity"
            android:exported="false" />
        <activity
            android:name="groups.project.movieappwithfirebase.PlayerActivity"
            android:exported="false"
            android:resizeableActivity="true"
            android:screenOrientation="landscape"
            android:supportsPictureInPicture="true"
            android:theme="@style/Theme.AppCompat.FullScreen" />
        <activity
            android:name="groups.project.movieappwithfirebase.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>